<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div style="margin-left: 80%;width: max-content;">
      <a href="/add" class="btn btn-primary">Add expense</a>
    </div>

    <div class="row">
      <% expenseList.forEach((expense, i) => { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= expense.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Paid by: <%= expense.paidBy %></h6>
          <p class="card-text"><%= expense.description %></p>
          <p class="card-text"><%= expense.amount %></p>
          <a href="/edit/<%=expense._id %>" class="btn btn-success">Update</a>
          <a href="/delete/<%= i %>" class="btn btn-danger">Delete</a>
        </div>
      </div>
      <% }) %>

    </div>
    
  </body>
</html>
